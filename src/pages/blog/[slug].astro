  }

  .article-content .code-dot.red { background-color: rgb(239 68 68); }
  .article-content .code-dot.yellow { background-color: rgb(245 158 11); }
  .article-content .code-dot.green { background-color: rgb(34 197 94); }

  .article-content .code-filename {
    font-size: 0.75rem;
    color: rgb(148 163 184);
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
