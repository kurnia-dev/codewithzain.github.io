---
import BaseLayout from '../layouts/BaseLayout.astro';
import Icon from '../components/Icon.astro';
---

<BaseLayout title="Page Not Found" currentPath="/404">
  <div class="w-full max-w-[1440px] mx-auto px-4 md:px-10 lg:px-40 py-20">
    <div class="text-center">
      <!-- 404 Illustration -->
      <div class="mb-8">
        <div class="inline-flex items-center justify-center size-32 rounded-full bg-primary/10 text-primary mb-6">
          <Icon name="search_off" class="text-6xl" />
        </div>
        <h1 class="text-6xl md:text-8xl font-black text-gray-900 dark:text-white mb-4">
          404
        </h1>
      </div>

      <!-- Error Message -->
      <div class="max-w-md mx-auto mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
          Page Not Found
        </h2>
        <p class="text-gray-600 dark:text-text-secondary-dark leading-relaxed">
          The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="/"
          class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-white font-bold py-3 px-6 rounded-lg transition-colors shadow-lg shadow-primary/20"
        >
          <Icon name="home" class="text-[20px]" />
          Go Home
        </a>
        <button 
          class="inline-flex items-center gap-2 bg-white dark:bg-surface-dark border border-gray-200 dark:border-border-dark text-gray-900 dark:text-white font-bold py-3 px-6 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
          data-go-back
        >
          <Icon name="arrow_back" class="text-[20px]" />
          Go Back
        </button>
      </div>

      <!-- Search Suggestion -->
      <div class="mt-12 p-6 bg-gray-50 dark:bg-surface-dark rounded-xl border border-gray-200 dark:border-border-dark max-w-md mx-auto">
        <h3 class="font-bold text-gray-900 dark:text-white mb-3">
          Looking for something specific?
        </h3>
        <p class="text-sm text-gray-600 dark:text-text-secondary-dark mb-4">
          Try searching our articles or browse by topic.
        </p>
        <div class="flex gap-2">
          <a 
            href="/topics"
            class="text-primary hover:underline text-sm font-medium"
          >
            Browse Topics
          </a>
          <span class="text-gray-400">â€¢</span>
          <a 
            href="/#search"
            class="text-primary hover:underline text-sm font-medium"
          >
            Search Articles
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  class NotFoundPage {
    private goBackButton: HTMLButtonElement | null = null;

    constructor() {
      this.init();
    }

    private init(): void {
      this.goBackButton = document.querySelector('[data-go-back]') as HTMLButtonElement;
      
      if (this.goBackButton) {
        this.goBackButton.addEventListener('click', this.handleGoBack.bind(this));
      }

      // Track 404 page view for analytics
      this.trackPageView();
    }

    private handleGoBack(): void {
      // Check if there's history to go back to
      if (window.history.length > 1) {
        window.history.back();
      } else {
        // If no history, redirect to home
        window.location.href = '/';
      }
    }

    private trackPageView(): void {
      // Track 404 page views for analytics
      // You can integrate with Google Analytics, Plausible, etc.
      
      // Example with Google Analytics
      // if (typeof gtag !== 'undefined') {
      //   gtag('event', 'page_view', {
      //     page_title: '404 - Page Not Found',
      //     page_location: window.location.href,
      //     custom_map: { 'custom_parameter_1': 'error_page' }
      //   });
      // }

      // Log to console for debugging
      console.log('404 Page View:', {
        url: window.location.href,
        referrer: document.referrer,
        timestamp: new Date().toISOString()
      });
    }
  }

  // Initialize 404 page functionality when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      new NotFoundPage();
    });
  } else {
    new NotFoundPage();
  }
</script>