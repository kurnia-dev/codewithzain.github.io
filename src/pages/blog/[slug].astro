  .article-content .code-copy {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: rgb(148 163 184);
    cursor: pointer;
    transition: color 0.2s;
  }

  .article-content .code-copy:hover {
    color: rgb(255 255 255);
  }

  /* Blockquotes */
  .article-content blockquote {
    border-left: 4px solid rgb(19 91 236);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: rgb(75 85 99);
    background-color: rgba(19, 91, 236, 0.05);
    padding: 1.25rem 1.5rem;
