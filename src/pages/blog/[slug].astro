---
import { getCollection, render, type CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { formatDate } from "../../utils/date";
import CodeSnippet from "../../components/CodeSnippet.astro";
import AuthorBio from "../../components/AuthorBio.astro";
import OptimizedImage from "../../components/OptimizedImage.astro";
import { AUTHOR } from "../../consts";

// Generate static paths for blog posts
export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content, headings } = await render(post);

// Generate table of contents from headings
const tableOfContents = headings.map((heading) => ({
  id: heading.slug,
  title: heading.text,
  level: heading.depth,
}));

// Get related posts (other posts from same category or random)
const allPosts = await getCollection("blog");
const relatedPosts = allPosts
  .filter((p) => p.id !== post.id)
  .filter((p) => p.data.category === post.data.category || Math.random() > 0.5)
  .slice(0, 2)
  .map((p) => ({
    title: p.data.title,
    description: p.data.excerpt,
    image: p.data.image,
    slug: p.id,
  }));

// Generate some tags based on category and content
const generateTags = (category: string, title: string) => {
  const categoryTags: Record<string, string[]> = {
    DevOps: ["devops", "cicd", "automation"],
    "Front-end": ["frontend", "react", "javascript"],
    Mobile: ["mobile", "flutter", "react-native"],
    "Back-end": ["backend", "microservices", "api"],
    Architecture: ["architecture", "microservices", "scalability"],
    QA: ["testing", "cypress", "automation"],
    Design: ["design", "ui", "dark-mode"],
    Documentation: ["markdown", "formatting", "guide"],
  };

  return categoryTags[category] || ["programming", "development"];
};

const tags = generateTags(post.data.category, post.data.title);
import Icon from "../../components/Icon.astro";
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  currentPath={`/blog/${post.id}`}
>
  <div class="layout-container w-full max-w-[1440px] mx-auto p-4 md:p-6 lg:p-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 relative">
      <!-- Left Sidebar (TOC) -->
      <aside class="hidden lg:block lg:col-span-3 xl:col-span-2 relative">
        <div
          class="sticky top-24 max-h-[calc(100vh-8rem)] overflow-y-auto pr-4"
        >
          {
            tableOfContents.length > 0 && (
              <>
                <h3 class="text-gray-600 dark:text-text-secondary-dark text-xs font-bold uppercase tracking-wider mb-4 px-3">
                  On this page
                </h3>
                <nav class="flex flex-col gap-1 border-l border-gray-200 dark:border-border-dark">
                  {tableOfContents.map((item, index) => (
                    <a
                      class={`flex items-center gap-3 px-3 py-2 border-l-2 transition-all -ml-[2px] ${
                        index === 0
                          ? "border-primary bg-primary/5 rounded-r-lg"
                          : "border-transparent hover:border-gray-400 dark:hover:border-text-secondary-dark"
                      } ${item.level > 1 ? "pl-6" : ""}`}
                      href={`#${item.id}`}
                    >
                      <span
                        class={`text-sm leading-normal ${
                          index === 0
                            ? "text-primary font-medium"
                            : "text-gray-600 dark:text-text-secondary-dark hover:text-gray-900 dark:hover:text-white"
                        } ${item.level > 1 ? "font-normal" : "font-medium"}`}
                      >
                        {item.title}
                      </span>
                    </a>
                  ))}
                </nav>
              </>
            )
          }

          <!-- Share Buttons -->
          <div
            class="mt-8 pt-6 border-t border-gray-200 dark:border-border-dark"
          >
            <p
              class="text-gray-600 dark:text-text-secondary-dark text-xs font-bold mb-3"
            >
              Share this article
            </p>
            <div class="flex gap-2">
              <button
                class="size-8 rounded-full bg-gray-100 dark:bg-surface-dark flex items-center justify-center text-gray-600 dark:text-text-secondary-dark hover:text-primary hover:bg-primary/10 transition-colors"
              >
                <Icon name="share" class="text-[18px]" />
              </button>
              <button
                class="size-8 rounded-full bg-gray-100 dark:bg-surface-dark flex items-center justify-center text-gray-600 dark:text-text-secondary-dark hover:text-primary hover:bg-primary/10 transition-colors"
              >
                <Icon name="favorite" class="text-[18px]" />
              </button>
              <button
                class="size-8 rounded-full bg-gray-100 dark:bg-surface-dark flex items-center justify-center text-gray-600 dark:text-text-secondary-dark hover:text-primary hover:bg-primary/10 transition-colors"
              >
                <Icon name="bookmark" class="text-[18px]" />
              </button>
            </div>
          </div>
        </div>
      </aside>

      <!-- Main Article Content -->
      <article
        class="lg:col-span-9 xl:col-span-7 flex flex-col gap-6 max-w-3xl mx-auto w-full"
      >
        <!-- Article Tags -->
        <div class="flex gap-2 flex-wrap">
          <div
            class="flex h-7 shrink-0 items-center justify-center gap-x-2 rounded-full bg-primary/10 hover:bg-primary/20 cursor-pointer transition-colors px-3 border border-primary/20 hover:border-primary/50"
          >
            <p
              class="text-primary text-xs font-semibold uppercase tracking-wide"
            >
              {post.data.category}
            </p>
          </div>
          {
            tags.slice(0, 3).map((tag) => (
              <div class="flex h-7 shrink-0 items-center justify-center gap-x-2 rounded-full bg-gray-100 dark:bg-surface-dark px-3 border border-gray-200 dark:border-border-dark">
                <p class="text-gray-600 dark:text-text-secondary-dark text-xs font-medium">
                  {tag}
                </p>
              </div>
            ))
          }
        </div>

        <!-- Article Header -->
        <div class="flex flex-col gap-4">
          <h1
            class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-black leading-tight tracking-[-0.033em]"
          >
            {post.data.title}
          </h1>
          <p
            class="text-gray-600 dark:text-text-secondary-dark text-lg md:text-xl font-normal leading-relaxed"
          >
            {post.data.description}
          </p>
        </div>

        <!-- Author & Meta -->
        <div
          class="flex items-center justify-between py-4 border-b border-gray-200 dark:border-border-dark"
        >
          <div class="flex gap-4 items-center">
            <div
              class="size-12 rounded-full bg-center bg-cover border border-gray-200 dark:border-border-dark shadow-sm"
              style={`background-image: url("${AUTHOR.avatar.small}")`}
            >
            </div>
            <div class="flex flex-col justify-center">
              <div class="flex items-center gap-2">
                <p
                  class="text-gray-900 dark:text-white text-base font-bold leading-tight"
                >
                  {AUTHOR.name}
                </p>
                <Icon name="verified" class="text-primary text-[16px]" />
              </div>
              <p
                class="text-gray-600 dark:text-text-secondary-dark text-sm font-normal"
              >
                {AUTHOR.title}
              </p>
            </div>
          </div>
          <div
            class="text-gray-600 dark:text-text-secondary-dark text-sm text-right hidden sm:block"
          >
            <p>Published {formatDate(post.data.pubDate)}</p>
            <p>{post.data.readTime}</p>
          </div>
        </div>

        <!-- Hero Image -->
        {
          post.data.image && (
            <div class="w-full aspect-video rounded-lg overflow-hidden shadow-lg">
              <OptimizedImage
                src={post.data.image}
                alt={post.data.title}
                width={800}
                height={450}
                widths={[400, 800, 1200]}
                sizes="(max-width: 768px) 100vw, (max-width: 1200px) 80vw, 800px"
                class="w-full h-full object-cover"
                loading="eager"
                fetchpriority="high"
              />
            </div>
          )
        }

        <!-- Article Content -->
        <div class="article-content">
          <Content components={{ pre: CodeSnippet }} />
        </div>

        <!-- Article Footer -->
        <div class="py-8 mt-4 border-t border-gray-200 dark:border-border-dark">
          <div class="flex flex-wrap gap-2 mb-6">
            <span
              class="text-gray-600 dark:text-text-secondary-dark text-sm mr-2 py-1"
              >Tags:</span
            >
            {
              tags.map((tag) => (
                <a
                  class="text-primary text-sm hover:underline"
                  href={`/blog/tag/${tag}`}
                >
                  #{tag}
                </a>
              ))
            }
          </div>
        </div>

        <!-- Author Bio -->
        <AuthorBio />

        <!-- Related Posts -->
        {
          relatedPosts.length > 0 && (
            <div class="pt-8">
              <h3 class="text-gray-900 dark:text-white text-xl font-bold mb-6">
                Read Next
              </h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {relatedPosts.map((relatedPost) => (
                  <div class="flex flex-col gap-3 group cursor-pointer">
                    <div class="aspect-video w-full rounded-lg overflow-hidden shadow-sm">
                      <OptimizedImage
                        src={relatedPost.image}
                        alt={relatedPost.title}
                        width={400}
                        height={225}
                        widths={[200, 400]}
                        sizes="(max-width: 768px) 100vw, 400px"
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                        quality={80}
                      />
                    </div>
                    <h4 class="text-gray-900 dark:text-white font-bold group-hover:text-primary transition-colors">
                      <a href={`/blog/${relatedPost.slug}`}>
                        {relatedPost.title}
                      </a>
                    </h4>
                    <p class="text-gray-600 dark:text-text-secondary-dark text-sm line-clamp-2">
                      {relatedPost.description}
                    </p>
                  </div>
                ))}
              </div>
            </div>
          )
        }
      </article>

      <!-- Right Sidebar -->
      <aside class="hidden xl:block xl:col-span-3">
        <div class="sticky top-24 flex flex-col gap-8">
          <!-- Newsletter Widget -->
          <div
            class="bg-white dark:bg-surface-dark border border-gray-200 dark:border-border-dark rounded-xl p-6 shadow-sm"
          >
            <div
              class="size-10 rounded-full bg-primary/10 flex items-center justify-center text-primary mb-4"
            >
              <Icon name="mail" />
            </div>
            <h3 class="text-gray-900 dark:text-white font-bold text-lg mb-2">
              Join the inner circle
            </h3>
            <p class="text-gray-600 dark:text-text-secondary-dark text-sm mb-4">
              Get the latest tutorials and insights delivered to your inbox
              weekly. No spam.
            </p>
            <form class="flex flex-col gap-3">
              <input
                class="w-full bg-gray-50 dark:bg-background-dark border border-gray-200 dark:border-border-dark rounded-lg px-4 py-2 text-gray-900 dark:text-white text-sm focus:outline-none focus:border-primary transition-colors placeholder:text-gray-500 dark:placeholder:text-text-secondary-dark"
                placeholder="your@email.com"
                type="email"
              />
              <button
                class="w-full bg-primary hover:bg-primary-dark text-white font-medium py-2 rounded-lg transition-colors text-sm shadow-sm shadow-primary/20"
                type="button">Subscribe</button
              >
            </form>
          </div>

          <!-- Trending Topics -->
          <div>
            <h4
              class="text-gray-900 dark:text-white font-bold text-sm uppercase tracking-wide mb-4"
            >
              Trending Topics
            </h4>
            <div class="flex flex-col gap-2">
              <a
                class="group flex items-center justify-between p-3 rounded-lg hover:bg-gray-50 dark:hover:bg-surface-dark transition-colors"
                href="#"
              >
                <span
                  class="text-gray-600 dark:text-text-secondary-dark group-hover:text-gray-900 dark:group-hover:text-white text-sm font-medium"
                  >Microservices</span
                >
                <span
                  class="text-xs text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-border-dark group-hover:bg-white dark:group-hover:bg-background-dark px-2 py-0.5 rounded"
                  >12k</span
                >
              </a>
              <a
                class="group flex items-center justify-between p-3 rounded-lg hover:bg-gray-50 dark:hover:bg-surface-dark transition-colors"
                href="#"
              >
                <span
                  class="text-gray-600 dark:text-text-secondary-dark group-hover:text-gray-900 dark:group-hover:text-white text-sm font-medium"
                  >React</span
                >
                <span
                  class="text-xs text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-border-dark group-hover:bg-white dark:group-hover:bg-background-dark px-2 py-0.5 rounded"
                  >8.5k</span
                >
              </a>
              <a
                class="group flex items-center justify-between p-3 rounded-lg hover:bg-gray-50 dark:hover:bg-surface-dark transition-colors"
                href="#"
              >
                <span
                  class="text-gray-600 dark:text-text-secondary-dark group-hover:text-gray-900 dark:group-hover:text-white text-sm font-medium"
                  >DevOps</span
                >
                <span
                  class="text-xs text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-border-dark group-hover:bg-white dark:group-hover:bg-background-dark px-2 py-0.5 rounded"
                  >24k</span
                >
              </a>
            </div>
          </div>
        </div>
      </aside>
    </div>
  </div>
</BaseLayout>

<style is:global>
  @import "../../styles/article.css";

  /* Custom scrollbar for code blocks */
  .custom-scrollbar::-webkit-scrollbar {
    height: 8px;
    width: 8px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: #f1f5f9;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 4px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }

  /* tailwind @apply not working, style moved into ~/styles/article.css */
</style>
